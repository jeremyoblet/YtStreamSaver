{
  "name": "YouTube Quality Notifier",
  "version": "1.1",
  "manifest_version": 3,
  "description": "Notifie lorsque la qualit√© YouTube change.",
  "permissions": ["notifications", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
