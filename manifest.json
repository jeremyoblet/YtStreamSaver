{
  "name": "YouTube Quality Notifier",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Notifie lorsque la qualit√© YouTube change.",
  "permissions": ["notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ]
}
