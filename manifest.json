{
  "name": "Yt Stream Saver",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Notify Youtube videos qualities when the tab or Chrome are hidden",
  "permissions": ["notifications", "storage", "tabs", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "host_permissions": ["*://www.youtube.com/*"]
}
