{
  "name": "YouTube Quality optimizer",
  "version": "1.1",
  "manifest_version": 3,
  "description": "Notify Youtube videos qualities when the tab or Chrome are hidden",
  "permissions": [
    "notifications",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  }
}
